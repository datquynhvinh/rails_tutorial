<% provide(:title, 'Course / ' + @course.name) %>

<div class="card">
  <div class="card-header col-12">
    <h1 class="card-title lessons-title"><%= @course.name %> - Lessons</h1>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th style="width: 10px">#</th>
        <th>Task</th>
        <th>Progress</th>
        <th style="width: 40px">Label</th>
      </tr>
      </thead>
      <tbody>
      <%
        progress_color = {
          25 => 'bg-danger',
          50 => 'bg-warning',
          75 => 'bg-primary',
          100 => 'bg-success'
        }
        order_number = 0
        if @lessons.present? && @lessons.any?
          @lessons.each do |lesson|
            progress = @lessons_with_completion[lesson.id]

            selected_color = nil
            progress_color.each do |key, color|
              if progress < key
                selected_color = color
                break
              end
            end
      %>

          <tr>
            <td><%= order_number+= 1 %></td>
            <td>
              <%= link_to lesson.name, course_lesson_sections_path(course_id: @course.id, lesson_id: lesson.id)%>
            </td>
            <td>
              <div class="progress progress-xs">
                <div class="progress-bar <%= selected_color %>" style="width: <%= progress %>%"></div>
              </div>
            </td>
            <td><span class="badge <%= selected_color %>"><%= progress %>%</span></td>
          </tr>
        <% end %>

      <% end %>
      </tbody>
    </table>

  </div>
  <!-- /.card-body -->
  <div class="card-footer d-flex justify-content-end">
    <%= paginate @lessons %>
  </div>
  <!-- /.card -->
</div>

