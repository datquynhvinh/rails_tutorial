<% provide(:title, 'Course / ' + @course.name + ' / ' + @lesson.name) %>

<div class="card">
  <div class="card-header col-12">
    <h1 class="card-title lessons-title"><%= @course.name %> - <%= @lesson.name %></h1>
    <a class="card-title lessons-title float-right">New Section</a>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th style="width: 10px">#</th>
        <th>Task</th>
      </tr>
      </thead>
      <tbody>
      <%
        order_number = 0
        if @sections.present? && @sections.any?
          @sections.each do |section|
      %>
          <tr>
            <td><%= order_number+= 1 %></td>
            <td><%= link_to section.name %></td>
          </tr>
        <% end %>

      <% end %>
      </tbody>
    </table>

  </div>
  <!-- /.card-body -->
  <div class="card-footer d-flex justify-content-end">
    <%= paginate @sections %>
  </div>
  <!-- /.card -->
</div>

